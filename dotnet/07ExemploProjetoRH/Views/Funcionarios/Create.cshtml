@model _07ExemploProjetoRH.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-person-plus-fill text-primary me-2"></i>Cadastrar Funcionário
            </h2>
            <p class="text-muted mb-0">Preencha as informações do novo colaborador</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-3 px-4">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 p-4">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control rounded-3" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Endereco" class="form-label"></label>
                <input asp-for="Endereco" class="form-control rounded-3" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Ramal" class="form-label"></label>
                <input asp-for="Ramal" class="form-control rounded-3" />
                <span asp-validation-for="Ramal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EmailProfissional" class="form-label"></label>
                <input asp-for="EmailProfissional" class="form-control rounded-3" />
                <span asp-validation-for="EmailProfissional" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Departamento" class="form-label"></label>
                <input asp-for="Departamento" class="form-control rounded-3" />
                <span asp-validation-for="Departamento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Salario" class="form-label"></label>
                <input asp-for="Salario" class="form-control rounded-3" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DataAdmissao" class="form-label"></label>
                <input asp-for="DataAdmissao" class="form-control rounded-3" type="date" />
                <span asp-validation-for="DataAdmissao" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary rounded-3 px-4">
                <i class="bi bi-check-lg me-2"></i>Salvar
            </button>
        </form>
    </div>
</div>
